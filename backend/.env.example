# Application Configuration
APP_NAME=CatAtlas API
APP_VERSION=1.0.0
DEBUG=True

# Database
DATABASE_PATH=learninglog.db

# Authentication (CHANGE IN PRODUCTION!)
# Generate a secure secret with: python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
# In development: localhost is allowed
# In production: Set to your actual domain(s), comma-separated
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=5

# Monitoring (Optional)
# Get DSN from https://sentry.io after creating a project
SENTRY_DSN=
LOG_LEVEL=INFO

# Feature Flags
ENABLE_REGISTRATION=True
